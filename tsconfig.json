{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      // "@types/*": ["./src/@types/*"], TODO: Figure out better way to import/use types 
      "@assets/*": ["./src/assets/*"],
      "@common/*": ["./src/common/*"],
      "@components/*": ["./src/components/*"],
      "@context/*": ["./src/context/*"],
      "@forms/*": ["./src/forms/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@theme/*": ["./src/theme/*"],
      "@utils/*": ["./src/utils/*"],
      "@validation/*": ["./src/validation/*"]
    },
  },
}
